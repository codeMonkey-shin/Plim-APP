<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:id="@+id/imageFood"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/food_round_rect"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/foodItem_shareImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFood"
        app:layout_constraintStart_toEndOf="@+id/imageFood"

        app:srcCompat="@drawable/share_icon"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/foodItem_favoriteImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFood"
        app:layout_constraintStart_toEndOf="@+id/foodItem_shareImageView"

        app:srcCompat="@drawable/ic_baseline_favorite_border_24"
        app:tint="@color/black" />




</androidx.constraintlayout.widget.ConstraintLayout>